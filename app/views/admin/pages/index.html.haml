- content_for :header_left do
  Listing pages
- content_for :header_right do
  = link_to_add 'New page', new_admin_page_path

%table
  %tr
    %th Title
    %th Url
    %th Requires login
    %th Can be cached
    %th Layout
    %th Last Update
    %th
    %th
  - @pages.each do |page|
    %tr
      %td= h page.title
      %td= h page.url
      %td= page.requires_login ? "YES" : "NO"
      %td= page.cacheable ? "YES" : "NO"
      %td= page.page_layout.title if page.page_layout.present?
      %td= h page.updated_at
      %td= link_to image_tag('admin/pencil.png', :size => '16x16'), edit_admin_page_path(page)
      %td= link_to image_tag('admin/cross.png', :size => '16x16'), [:admin, page], :confirm => 'Are you sure?', :method => :delete
