#header
  #header_left
    %h3 
      New page
  #header_right
    %nbsp

#wrapper
  = error_messages_for :page

  - form_for([:admin, @page], :url => admin_pages_path) do |f| 
    %p
      %b
        Title
      %br
        = f.text_field :title
    %p
      %b
        Url
      %br
      = f.text_field :url
    %p
      %b
        Body 
      %br
        = f.text_area :body, {:style=>'width:850px;'}
      
    %p
      = submit_tag "Create" 

  = link_to 'Back', admin_pages_path