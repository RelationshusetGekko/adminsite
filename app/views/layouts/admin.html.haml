!!!
%html{"xml:lang"=>"en", "lang"=>"en", "xmlns"=>"http://www.w3.org/1999/xhtml"}
  %head
    %meta{"content"=>"text/html;charset=UTF-8", "http-equiv"=>"content-type"}
    %title
      Administration:
      = controller.action_name.capitalize
    = stylesheet_link_tag 'admin'
    = javascript_include_tag :defaults, :cache => 'admin'
  %body
    #top-logo
      %img{:src=>"/images/admin/logo.gif"}
    = render(:partial => 'admin/shared/menu') if current_admin.present?

    - if flash[:notice]
      #flashnotice
        %br
        =flash[:notice]
    - if flash[:error]
      #flasherror
        %br
        =flash[:error]

    #header
      #header_left
        %h3
          = yield :header_left
      #header_right
        = yield :header_right
      .clearfix
    #wrapper
      = yield
