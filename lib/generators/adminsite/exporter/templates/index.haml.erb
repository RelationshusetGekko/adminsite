- content_for :header_left do
  <%= class_name.camelize %> exports

%p
  Select the export you want to generate:
= form_tag(admin_<%= file_name %>_exports_path, :method => :post) do
  = select_tag "export_name_scope", options_for_select(@export_name_scopes)
  = select_tag "file_type", options_for_select(@file_types)
  = submit_tag "generate export"

- @file_types.each do |file_type|
  %h2= file_type
  - exports = <%= class_name.camelize %>Export.generated_export_files(file_type)
  - if exports.any?
    %table
      %tr
        %th Filename
        %th Age
        %th
      - exports.each do |export|
        - basename = File.basename(export, ".#{file_type}")
        - file_path = admin_<%= file_name %>_export_path("#{basename}_#{file_type}")
        - age_in_minutes = (((Time.now - File.mtime(export)).abs)/60)
        - klass = 'old' if age_in_minutes > 60
        %tr{ :class => klass }
          %td= link_to "#{basename}.#{file_type}", file_path
          %td= time_ago_in_words File.mtime(export)
          %td= link_to image_tag('admin/cross.png'), file_path, :confirm => 'Are you sure?', :method => :delete
  - else
    %p
      No exports yet
